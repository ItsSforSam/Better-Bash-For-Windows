    {
      "cwd": "${workDir}",
      "binaryPath": "${workDir}/bin/bash.exe",
      "binaryArgs": [],
      "stopAtEntry": true
    }
  ],
  "files.associations": {
    ".manifest": "xml",
    "iostream": "cpp"
  }
}