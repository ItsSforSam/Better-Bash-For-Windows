{
  "C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools",
  "makefile.configurations": [
    {
      "name": "Default",
      "makeDirectory": "${workDir}/scr"
    },
    {
      "name": "Clean",
      "makeArgs": [
        "clean"
      ],
      // "makeDirectory": "${workDir}/scr"
    }
  ],
  "editor.formatOnSave": true,
  "makefile.makefilePath": "MAKEFILE",
